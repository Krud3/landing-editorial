---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";
type DropdownItem = {
  title: string;
  path: string;
};

const { title, lastItem, children, class: extraClass } = Astro.props as {
  title: string;
  lastItem?: boolean;
  children: DropdownItem[];
  class?: string;
};
---

<li class="relative">
  <DropdownContainer class="group">
    <button
      class:list={["flex items-center gap-1 w-full lg:w-auto", extraClass]}>
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          "lg:absolute w-full lg:w-48 z-10",
          lastItem
            ? "lg:right-0 origin-top-right"
            : "lg:left-0 origin-top-left",
        ]}>
        <div
          class="lg:py-2 lg:bg-white px-4 lg:rounded-md lg:shadow flex flex-col">
          {
            children.map((item) => (
              <a
                href={item.path}
                class="block w-full rounded-md px-2 py-2 text-gray-700 transition-colors duration-200 hover:bg-gray-200/60 hover:text-indigo-600"
              >
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>
