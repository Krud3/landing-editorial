---
import Container from "@/components/container.astro";
import Link from "@/components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Textos académicos",
    path: "/libros",
  },
  {
    title: "Competencia lectora",
    path: "/competencia-lectora",
  },
  {
    title: "Seguimiento académico",
    path: "/seguimiento-academico",
    children: [
      { title: "Educación prescolar", path: "#" },
      { title: "Básica primaria", path: "#" },
      { title: "Básica secundaria", path: "#" },
    ],
  },
  {
    title: "Preparación para el ICFES",
    badge: true,
    path: "/sapere",
  },
  {
    title: "Plataforma virtual",
    path: "https://plataforma.editorialmercedesherrerasas.com/",
  },
  // {
  //   title: "Sobre nosotros",
  //   path: "/sobre-nosotros",
  // },
];
const currentPath = Astro.url.pathname;
---

<div class="sticky top-0 z-50 w-full bg-white/80 backdrop-blur-lg">
  <Container>
    <header class="flex items-center py-4">
      <div class="hidden w-full items-center justify-between lg:flex">
        
        <div class="flex-shrink-0">
          <a href="/" class="flex items-center gap-2">
            <img src="/logoEditorial.svg" alt="Logo" class="h-16 w-auto" />
          </a>
        </div>

        <nav class="flex-grow mx-12">
          <ul class="m-0 p-0 list-none flex items-center justify-center gap-2">
            {menuitems.map((item) => {
              const isActive =
                item.path === currentPath ||
                (item.path !== "/" && currentPath.startsWith(item.path));

              return (
                <li class="flex">
                  {item.children ? (
                    <Dropdown
                      title={item.title}
                      children={item.children}
                      class:list={[
                        "flex items-center text-justify rounded-md px-3 py-2 font-medium transition-colors duration-300",
                        "hover:text-indigo-600 hover:bg-gray-200/50",
                        isActive ? "text-indigo-600 bg-gray-200/60" : "text-gray-700",
                      ]}
                    />
                  ) : (
                    <a
                      href={item.path}
                      class:list={[
                        "flex items-center justify-center rounded-md px-3 py-2 font-medium transition-colors duration-300",
                        "hover:text-indigo-600 hover:bg-gray-200/50",
                        isActive ? "text-indigo-600 bg-gray-200/60" : "text-gray-700",
                      ]}
                      target={item.path.startsWith("http") ? "_blank" : "_self"}
                    >
                      <span>{item.title}</span>
                      {item.badge && (
                        <span class="ml-2 rounded-full bg-indigo-600 px-1.5 py-0.5 text-[10px] font-semibold uppercase text-white animate-pulse">
                          Nuevo
                        </span>
                      )}
                    </a>
                  )}
                </li>
              );
            })}
          </ul>
        </nav>


        <div class="flex flex-col gap-2">
          <Link href="https://finanzasoeth.site/" style="amber" target="_blank" size="sm" class="whitespace-nowrap">Recibo de pago</Link>  
          <Link href="/contactanos" style="indigo" size="sm">¡Contáctanos!</Link>
        </div>
      </div>

      <div class="w-full lg:hidden">
        <Astronav >
          <div class="flex w-full items-center justify-between">
            <a href="/" class="flex items-center gap-2">
              <img src="/logoEditorial.svg" alt="Logo" class="h-16 w-auto" />
            </a>
            <div class="block lg:hidden">
              <MenuIcon class="h-5 w-5 text-gray-800" />
            </div>
          </div>
          <MenuItems class="hidden absolute top-full left-0 mt-2 w-full rounded-lg bg-white p-4 shadow-lg lg:relative lg:mt-0 lg:flex lg:w-auto lg:rounded-none lg:bg-transparent lg:p-0 lg:shadow-none">
            <ul class="flex flex-col lg:flex-row lg:gap-2">
              {/* El mapeo de menuitems se repite aquí para móvil, o puedes abstraerlo a una variable si prefieres */}
              {menuitems.map((item) => {
                const isActive = item.path === currentPath || (item.path !== "/" && currentPath.startsWith(item.path));
                return (
                  <>
                  {item.children ? (
                    <Dropdown
                      title={item.title}
                      children={item.children}
                      class:list={[
                        "flex items-center text-justify rounded-md px-3 py-2 font-medium transition-colors duration-300",
                        "hover:text-indigo-600 hover:bg-gray-200/50",
                        isActive ? "text-indigo-600 bg-gray-200/60" : "text-gray-700",
                      ]}
                    />
                  ) : (
                    <li>
                      <a
                        href={item.path}
                        class:list={[
                          "flex items-center  text-justify rounded-md px-3 py-2 font-medium transition-colors duration-300",
                          "hover:text-indigo-600 hover:bg-gray-200/50",
                          isActive ? "text-indigo-600 bg-gray-200/60" : "text-gray-700",
                        ]}
                        target={item.path.startsWith("http") ? "_blank" : "_self"}
                      >
                        <span>{item.title}</span>
                        {item.badge && (
                          <span class="ml-2 rounded-full bg-indigo-600 px-1.5 py-0.5 text-[10px] font-semibold uppercase text-white animate-pulse">
                            Nuevo
                          </span>
                        )}
                      </a>
                    </li>
                  )}
                </>
                )
              })}
            </ul>
            <div class="mt-3 flex items-center gap-4 lg:hidden flex-col">
              <Link href="https://finanzasoeth.site/" block style="amber" target="_blank" size="sm" class="whitespace-nowrap">Recibo de pago</Link> 
              <Link href="/contactanos" style="indigo" block size="sm">¡Contactanos!</Link>
            </div>
        </div>
          </MenuItems>
        </Astronav>
      </div>
    </header>
  </Container>
</div>